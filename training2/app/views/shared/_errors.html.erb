<% if obj.errors.any? %>
<div class="row">
  <div clas="col-md-8 offset-md-2">
    <div class="alert alert-danger">
      <%= pluralize(obj.errors.count, "error" ) %>
      prohibited this <%= obj.class %> from being saved:
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  </div>
</div>
<% end %>