<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<h1>Login</h1>
<%= form_for(:session, :html => {role: "form"}) do |f| %>
<%= f.label :email %>
<%= f.email_field :email, placeholder: "Enter your email" %>
<%= f.label :password %>
<%= f.password_field :password, placeholder: "Enter your password" %>
<%= f.submit "Login" %>
<% end %>